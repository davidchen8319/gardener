NAME="$1"
NAMESPACE="${2:-$(id -u -n)}"
OPERATION="${3:-reconcile}"

kubectl --namespace "$NAMESPACE" annotate shoot "$NAME" gardener.cloud/operation="$OPERATION" --overwrite
